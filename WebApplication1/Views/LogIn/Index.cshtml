@model DAL.DTOModel.LogInDTO
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}

<script src="~/lib/crypto-js/crypto-js.js"></script>
<script src="~/lib/crypto-js/aes.js"></script>
<script src="~/lib/crypto-js/hmac-sha512.js"></script>
<script src="~/lib/crypto-js/sha512.js"></script>
<script src="~/js/Encryption.js"></script>
<style type="text/css">
    .ui-button{
        margin-top:10px;
    }
</style>

<div class="container-md">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            @using (Html.BeginForm("In", "LogIn", FormMethod.Post, new { id = "LogInForm" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.account)
                    @Html.TextBoxFor(m => m.account, "請輸入帳號!", new { @class = "form-control" })
                    <span asp-validation-for='account' class="message"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.password)
                    @Html.TextBoxFor(m => m.password, "請輸入密碼!", new { @class = "form-control", @type = "password" })
                    <button type="button" class="ui-button"><span id="pw" class="glyphicon glyphicon-remove-circle"></span></button>
                    <span asp-validation-for='password' class="message"></span>
                </div>
                <input type="button" class="btn btn-primary btn-block" id="submit" value="Login" />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            }
        </div>
        <div class="col-md-4"></div>
    </div>
    @Html.Partial("BootstrapModal")
</div>

<script type="text/javascript">

    //檢查輸入選項
    function checkInput() {
        $('#msgModalTitle').text("通知").css({ 'color': 'blue', 'font-size' : '110%'});

        if ($("#account").val() == '') {
            $('#msgModalbody').text("請輸入帳號!").css({ 'color': 'red', 'font-size' : '150%'});
            $('#msgModal').modal('show');
            return false;
        }

        if ($("#password").val() == '') {
            $('#msgModalbody').text("請輸入密碼!").css({ 'color': 'red', 'font-size' : '150%'});
            $('#msgModal').modal('show');
            return false;
        }
        return true;
    }

    $(function () {
        window.localStorage.clear();

        $("button").click(function () {
            //當密碼為未鎖，則隱藏密碼，否則顯示密碼
            if ($("#pw").attr('class') == "glyphicon glyphicon-ok-circle") {
                $("#password").attr("type", "password");
                $("#pw").attr("class", "glyphicon glyphicon-remove-circle");
            }
            else {
                $("#password").attr("type", "text");
                $("#pw").attr("class", "glyphicon glyphicon-ok-circle");
            }
        });

        $("#submit").click(function () {
            //當檢查輸入錯誤，則顯示訊息
            //if (!checkInput()) return;

            if ($("#LogInForm").valid()) {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("In", "LogIn")',
                    data: {
                        __RequestVerificationToken: '@GetAntiXsrfRequestToken()',
                        account: Encrypt($("#account").val()),
                        password: CryptoJS.SHA512($("#password").val()).toString(),
                    },
                    async: true,
                    success: function (data) {
                        if (data == null || data == '') {
                            window.location.href = '@Url.Action("Index", "Home")';
                        }
                    },
                    error: function (error) {
                        if (error != null && error.responseText != '') {
                            $('#msgModalbody').text(error.responseText).css({ 'color': 'red'});
                            $('#msgModal').modal('show');
                            $("#account").val('');
                            $("#password").val('');
                        } 
                    }
                });
            }
        });
    });
</script>


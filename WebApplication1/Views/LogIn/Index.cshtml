@model DAL.DTOModel.LogInDTO
@{
    ViewData["Title"] = "Index";
}
<style type="text/css">
   .container{
       width: 400px !important;
   }
   .row{
       margin-top: 50%;
   }
</style>

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4">
            @using (Html.BeginForm("LoginAsync", "LogIn", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.account, "", new { @class = "text-danger" })
                    <input type="text" name="account" class="form-control" id="account" placeholder="Account" />
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password" />
                </div>
                <button id="submit" class="btn btn-primary  btn-block">Login</button>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            }
        </div>
        <div class="col-4"></div>
    </div>
</div>

